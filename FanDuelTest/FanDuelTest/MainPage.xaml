<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FanDuelTest"
             x:Class="FanDuelTest.MainPage">
    <ContentPage.Content>
        <StackLayout Margin="10,10,10,10">
            <Label Text="FanDuel Guessing Game Test" FontSize="Large"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="By Stewart Fullerton" FontSize="Medium"  HorizontalOptions="CenterAndExpand"/>
            <Image Source="Images/fdlogo.jpg" />
            <Label Text="Try and guess the FPPG score of the players, each score guessed correctly will earn you a point, when you reach 10 points the game will finish."/>


            <Button x:Name="btnStart" Text="Start Game" Clicked="btnStart_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>